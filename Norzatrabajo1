package fibbo;

import java.util.Scanner;

public class main {
	public static long fibonacci(int n) {

         if(n> 1) {
            return fibonacci (n-1) + fibonacci (n-2);
        }
        else if (n == 1) {
            return 1;
        }
        else if (n == 0) {
            return 0;
        }else {
        System.out.println ("Introducir un tama√±o maor o iguala 1");
        return -1;
        }
            
    }
	
	public static void main(String[] args) {
				long Num = 0;
		       Scanner leer = new Scanner(System.in);
		       System.out.println("Ingrese la poscion del numero que desea tener");
		        int j = leer.nextInt();
		        for (int i = 0; i<j; i ++) {
		        	Num= fibonacci (i);
		        			        
		    }
		        System.out.println ("Numero final es:"+ Num);
		    }
		   		
}


